{
  "name": "next-maintenance",
  "version": "2.8.2",
  "description": "Newtelco Maintenance App",
  "scripts": {
    "dev": "NEXT_PUBLIC_ENV=development next -p 4000",
    "ci": "NEXT_PUBLIC_ENV=CI next start -p 4000",
    "start": "NEXT_PUBLIC_ENV=production next start -p 4000",
    "build": "next build",
    "prettier": "prettier --check \"src/**/*.{js,jsx,json}\"",
    "prettier:fix": "prettier --write \"src/**/*.{js,jsx,json}\"",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:ci": "cypress run --record"
  },
  "keywords": [
    "nextjs",
    "react",
    "smtp",
    "google-apis",
    "network-maintenance"
  ],
  "author": "Nico Domino <ndomino@newtelco.de>",
  "homepage": "https://github.com/newtelco/next-maintenance",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newtelco/next-maintenance.git"
  },
  "bugs": {
    "url": "https://github.com/newtelco/next-maintenance/issues"
  },
  "license": "MIT",
  "dependencies": {
    "@nivo/bar": "^0.62.0",
    "@nivo/calendar": "^0.62.0",
    "@sentry/nextjs": "^6.9.0",
    "@tinymce/tinymce-react": "^3.12.6",
    "algolia-react-autocomplete": "^1.0.5",
    "algoliasearch": "^4.10.3",
    "apexcharts": "^3.27.2",
    "date-fns": "^2.22.1",
    "dompurify": "^2.3.0",
    "file-saver": "^2.0.5",
    "formik": "^2.2.9",
    "just-debounce-it": "^1.5.0",
    "lodash.isarray": "^4.0.0",
    "lodash.isequal": "^4.5.0",
    "lodash.isobject": "^3.0.2",
    "lodash.transform": "^4.6.0",
    "logrocket": "^1.3.0",
    "logrocket-react": "^4.0.1",
    "moment-timezone": "^0.5.33",
    "next": "^11.0.1",
    "next-auth": "^3.27.3",
    "react": "^17.0.2",
    "react-apexcharts": "^1.3.9",
    "react-dom": "^17.0.2",
    "react-excel-renderer": "^1.1.0",
    "react-flatpickr": "^3.10.7",
    "react-pdf": "^5.3.2",
    "react-rnd": "^10.3.4",
    "react-select": "^4.3.1",
    "react-useanimations": "^2.0.6",
    "serverless-mysql": "^1.5.4",
    "sql-template-strings": "^2.2.2",
    "swr": "^0.5.6",
    "undux": "^5.2.0",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@testing-library/cypress": "^7.0.6",
    "ag-grid-community": "^25.3.0",
    "ag-grid-react": "^25.3.0",
    "babel-eslint": "^10.1.0",
    "cypress": "^7.7.0",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.0.1",
    "prettier": "^2.3.2",
    "simple-git-hooks": "^2.5.1"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "ignorePatterns": [
      "node_modules/*",
      ".next/*",
      ".out/*",
      "!.prettierrc.js"
    ],
    "root": true,
    "env": {
      "node": true,
      "browser": true,
      "es6": true
    },
    "rules": {
      "no-unused-vars": 2,
      "no-undef": 2,
      "react/prop-types": 0
    },
    "extends": [
      "plugin:prettier/recommended",
      "plugin:react/recommended",
      "eslint:recommended"
    ],
    "plugins": [
      "prettier"
    ]
  },
  "simple-git-hooks": {
    "commit-msg": "npx --no-install commitlint --edit \"$1\"",
    "pre-commit": "npx --no-install lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,json}": [
      "npm run prettier:fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
